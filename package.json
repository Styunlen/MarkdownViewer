{
	"name": "markdown-viewer",
	"version": "0.0.0",
	"private": true,
	"license": "MIT",
	"author": "styunlen <styunlen@qq.com>",
	"type": "module",
	"scripts": {
		"build": "pnpm -F markdown-viewer build",
		"dev": "pnpm -F markdown-viewer dev",
		"lint": "pnpm lint-staged",
		"lint:eslint": "pnpm eslint --fix",
		"prepare": "husky install",
		"pretty": "pnpm pretty-quick",
		"preview": "pnpm -F markdown-viewer preview"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"prettier --write"
		],
		"!(*vite.config).ts": [
			"eslint --fix",
			"prettier --write"
		],
		"*.tsx": [
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"@vitejs/plugin-react": "^3.0.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.32.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.1",
		"husky": "^8.0.3",
		"lint-staged": "^11.1.2",
		"prettier": "^2.8.3",
		"pretty-quick": "^3.1.3",
		"typescript": "^4.9.3",
		"vite": "^4.0.0"
	}
}
